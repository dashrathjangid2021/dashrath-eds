{
  "definitions": [
    {
      "title": "Accordion Block",
      "id": "accordion-block",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "Accordion",
              "filter": "accordion-items"
            }
          }
        }
      }
    },
    {
      "title": "Accordion Item",
      "id": "accordion-item",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": {
              "name": "Accordion Item",
              "model": "accordion-item",
              "multiple": true,
              "properties": {
                "section": "content",
                "isContainer": true
              }
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "accordion-item",
      "fields": [
        {
          "component": "text",
          "name": "title",
          "label": "Title",
          "valueType": "string",
          "required": true,
          "attributes": {
            "placeholder": "Enter accordion title"
          }
        },
        {
          "component": "richtext",
          "name": "content",
          "label": "Content",
          "valueType": "string",
          "required": true,
          "attributes": {
            "multiline": true,
            "placeholder": "Enter accordion content"
          }
        }
      ]
    }
  ],
  "filters": [
    {
      "id": "accordion-items",
      "components": [
        "accordion-item"
      ],
      "properties": {
        "minItems": 1,
        "maxItems": 20
      }
    }
  ],
  "settings": {
    "authoring": {
      "enableMultiSelect": true,
      "enableDragAndDrop": true
    }
  }
}